extends ./commons/template.pug

block style
  include ./styles/ogImage.css

block template
  .shade
    .article-image(style="background-image: url(" + image + ")")
      .logo
        img(src="https://firebasestorage.googleapis.com/v0/b/jsmonday-cms.appspot.com/o/misc%2Flogo%2Fplain_logo.svg?alt=media&token=f77c2e67-0a00-4e82-bd8a-204de6662239")
        .logo-text JSMonday
      .push-bottom
        .author-data
          img(src=author.img)
          .author
            .name #{author.name}
            .desc #{author.desc}
        .article-data
          h1 #{title}
          p  #{description}